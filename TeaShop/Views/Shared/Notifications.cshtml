@if (TempData["success"] != null)
{
    <div class="alert alert-primary notification" id="success-alert" role="alert" style="font-size: 20px; padding: 1rem; position: absolute; top: 10px; left: 50%; transform: translateX(-50%); padding: 15px; border-radius: 5px; transition: opacity 1s; z-index: 1000; ">
        <span class="text-bg-light" style="color: black; font-size:20px;"> @TempData["success"]</span>
    </div>
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const successAlert = document.getElementById('success-alert');
        if (successAlert) {
            setTimeout(() => {
                successAlert.style.opacity = '0';
                setTimeout(() => {
                    successAlert.remove();
                }, 1000); // 1 second for the transition to complete
            }, 3000); // Display for 3 seconds
        }
    });</script>


