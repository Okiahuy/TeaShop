                    <script>
        $(document).ready(function () {
            $('#thucUongDropdown').on('click', function (e) {
                e.preventDefault();
                var $dropdownMenu = $('#thucUongMenu');
                if ($dropdownMenu.is(':empty')) {
                    $.ajax({
                        url: '@Url.Action("siderPartial", "Category")',
                        type: 'GET',
                        success: function (data) {
                            $dropdownMenu.html(data);
                        },
                        error: function () {
                            $dropdownMenu.html('<p class="dropdown-item">Failed to load categories.</p>');
                        }
                    });
                }
            });
        });
                    </script>
                    <!--Ẩn hiện hình ảnh-->
                    <script>
                        $(document).ready(function () {
                            // Initialize the carousel
                            $('#slider-carousel').carousel({
                                interval: 3000 // Change slide every 3 seconds
                            });

                            // Pause the carousel on mouseover
                            $('#slider-carousel').hover(function () {
                                $(this).carousel('pause');
                            }, function () {
                                $(this).carousel('cycle');
                            });
                        });
                    </script>
                    <script>
                        function toggleForm(event) {
                            event.preventDefault(); // Ngăn chặn hành vi mặc định của liên kết
                            const formContainer = document.getElementById('form-container1212');
                            const isFormVisible = formContainer.style.display === 'block';

                            // Chuyển trạng thái hiển thị của form
                            formContainer.style.display = isFormVisible ? 'none' : 'block';
                        }
                    </script>
